<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data />
    <androidx.cardview.widget.CardView
        android:id="@+id/carView"
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_width"
        android:layout_marginTop="@dimen/card_margin"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/card_width"
            android:layout_height="@dimen/card_height">

            <TextView
                android:id="@+id/tvTitleGroup"
                android:layout_width="@dimen/item_medium"
                android:layout_height="@dimen/margin_basic"
                android:layout_marginStart="@dimen/margin_small"
                android:text="@string/affiliation"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTitleRelatives"
                android:layout_width="@dimen/item_medium"
                android:layout_height="@dimen/margin_basic"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_basic"
                android:text="@string/large_text"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDescripGrooup" />

            <TextView
                android:id="@+id/tvDescripGrooup"
                android:layout_width="@dimen/text_width"
                android:layout_height="@dimen/text_height"
                android:layout_marginTop="@dimen/line_medium"
                android:layout_marginEnd="@dimen/spacing_large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="@dimen/bias_small"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTitleGroup"
                tools:text="@string/large_text" />

            <TextView
                android:id="@+id/tvDescripRelatives"
                android:layout_width="@dimen/text_width"
                android:layout_height="@dimen/text_height"
                android:layout_marginTop="@dimen/margin_basic"
                android:layout_marginEnd="@dimen/spacing_large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="@dimen/bias_small"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTitleRelatives"
                tools:text="@string/large_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>

